<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rezki.savingplan.SavingPlanFinalAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="54dp"
        android:gravity="center"
        android:id="@+id/linearLayout3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Nama Plan Anda"
            android:textStyle="bold"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/tv_namaplanfinal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Tujuan Anda"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_namatujuanfinal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Tujuan"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Jumlah Target"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_targetnabung"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Target"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:id="@+id/linearLayout4">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Tabungan Anda Saat Ini"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/tv_tabungan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Rp. 0"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/etnabung"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Nominal"
            android:inputType="number"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/btn_tabung"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tabung"/>
    </LinearLayout>

</RelativeLayout>
