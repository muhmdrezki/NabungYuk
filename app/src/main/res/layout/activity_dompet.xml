<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rezki.savingplan.DompetActivity">

    <TextView
        android:id="@+id/tv_tglhariini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dd/MM/yyyy"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="UANG ANDA"
        android:textSize="30dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_uang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Rp. 0,-"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pemasukan"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="PEMASUKAN"/>
        <Button
            android:id="@+id/btn_pengeluaran"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="PENGELUARAN"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pemasukan Terakhir"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_tgl_pemasukan_terakhir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dd/MM/yyyy"
        android:textSize="16dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pengeluaran Terakhir"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_tgl_pengeluaran_terakhir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dd/MM/yyyy"
        android:textSize="16dp"
        android:gravity="center"/>
</LinearLayout>
