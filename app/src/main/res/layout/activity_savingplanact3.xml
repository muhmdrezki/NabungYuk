<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sp3"
    tools:context="com.example.rezki.savingplan.SavingPlanAct3"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Pemasukkan/Bulan"
        android:textColor="#F9f9f9f9"
        android:textAlignment="center"
        android:textSize="17dp"

        android:id="@+id/textView5"
         />
    <TextView
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="Pengeluaran/Bulan"
        android:textColor="#F9f9f9f9"
        android:textSize="17dp"
        android:textAlignment="center"
        android:id="@+id/textView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/pemasukanTV"
        android:layout_width="180dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#F9f9f9f9"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Pemasukkan"
        />
    <TextView
        android:id="@+id/pengeluaranTV"
        android:layout_width="192dp"
        android:textColor="#F9f9f9f9"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Pengeluaran"
        android:textAlignment="center"
        android:textSize="17dp"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#F9f9f9f9"
            android:text="Berdasarkan pemasukan dan pengeluaran anda"
            android:textAlignment="center"
            android:textSize="17dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/targetTV"
            android:layout_width="250dp"
            android:textColor="#F9f9f9f9"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            android:text="Target Anda" />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Akan tercapai jika anda menabung sebanyak"
            android:textSize="17dp"
            android:textColor="#F9f9f9f9"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
    <TextView
        android:id="@+id/nabungandaTV"
        android:textSize="17dp"
        android:layout_width="250dp"
        android:textColor="#F9f9f9f9"
        android:layout_height="wrap_content"
        android:text="Nabung"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
      />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Dalam waktu "
            android:textSize="17dp"
            android:textColor="#F9f9f9f9"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"/>
    <TextView
        android:id="@+id/lamanabungTV"
        android:textSize="17dp"
        android:textColor="#F9f9f9f9"
        android:layout_width="250dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Lama Nabung"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp">
        <TextView
            android:layout_width="250dp"
            android:textColor="#F9f9f9f9"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="17dp"
            android:text="Anda masih punya uang sisa untuk kebutuhan lainya sebanyak"/>

        <TextView
            android:id="@+id/sisauangTV"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Sisa Uang"
            android:textAlignment="center"
            android:textColor="#F9f9f9f9"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Mulai"
            android:textColor="#f9f9f9f9"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Selesai"
            android:textColor="#f9f9f9f9"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_datemulai"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:textColor="#f9f9f9f9"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_dateselesai"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textColor="#f9f9f9f9"
            android:textSize="18dp"
            android:layout_weight="0.13" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <Button
            android:id="@+id/btn_ulangi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:text="Ulangi dari awal"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_next_act3"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#E23535"
            android:text="Simpan dan lanjut"
            android:textColor="#FFFFFF" />

    </RelativeLayout>


</LinearLayout>
