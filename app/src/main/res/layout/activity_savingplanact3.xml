<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rezki.savingplan.SavingPlanAct3"
    android:weightSum="1">

    <TextView
        android:id="@+id/coba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rincian Saving Plan Anda"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Pemasukkan/Bulan"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="17dp"

        android:id="@+id/textView5"
         />
    <TextView
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="Pengeluaran/Bulan"
        android:textSize="17dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/textView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/pemasukanTV"
        android:layout_width="180dp"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Pemasukkan"
        />
    <TextView
        android:id="@+id/pengeluaranTV"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="Pengeluaran"
        android:textAlignment="center"
        android:textSize="17dp"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Berdasarkan pemasukan dan pengeluaran anda"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/targetTV"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            android:text="Target Anda" />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Akan tercapai jika anda menabung sebanyak"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
    <TextView
        android:id="@+id/nabungandaTV"
        android:textSize="17dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Nabung"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
      />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Dalam waktu "
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"/>
    <TextView
        android:id="@+id/lamanabungTV"
        android:textSize="17dp"
        android:layout_width="250dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Lama Nabung"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="17dp"
            android:text="Anda masih punya uang sisa untuk kebutuhan lainya sebanyak"/>
        <TextView
            android:id="@+id/sisauangTV"
            android:layout_width="250dp"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sisa Uang"
            android:textStyle="bold"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Ulangi dari awal"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_next_act3"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:background="#E23535"
            android:text="Simpan dan lanjut"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</LinearLayout>
